<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Profile">

    <!-- Profile Title -->

    <!-- Back Button -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:fontFamily="@font/alata"
        android:text="Profile"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backbtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Back"
        android:scaleType="center"
        android:src="@drawable/zzzz"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <!-- Avatar Image Button with custom shape background -->

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:scaleType="center"
        android:src="@drawable/baseline_logout_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <ImageButton
android:id="@+id/avtaar"
android:layout_width="150dp"
android:layout_height="150dp"
android:scaleType="centerInside"
android:src="@drawable/profile_men"
    android:background="@drawable/profile_image_background"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.16"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.222" />


    <!-- Name Label -->
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:fontFamily="@font/alata"
android:text="Name:"
android:textSize="20dp"
android:textStyle="bold"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.625"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.195" />

    <!-- Name Display -->
<TextView
android:id="@+id/name_profile"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:fontFamily="@font/alata"
android:text="Enter your name"
android:textSize="20dp"
android:textStyle="bold"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.832"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.267" />

    <!-- Name EditText (Initially Hidden) -->
<EditText
android:id="@+id/editNameView"
android:layout_width="133dp"
android:layout_height="46dp"
android:fontFamily="@font/alata"
android:textSize="20dp"
android:visibility="gone"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.787"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintVertical_bias="0.272" />

    <!-- CardView for Update and Logout Options -->
    <androidx.cardview.widget.CardView
        android:id="@+id/update_logout"
        android:layout_width="355dp"
        android:layout_height="386dp"
        android:backgroundTint="@color/bg_blue"
        app:cardCornerRadius="25dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896">

        <!-- Inside the CardView: Layout and content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Email Label and Value -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alata"
                android:text="Email:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alata"
                android:text="Email id from database"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- Email EditText (Initially Hidden) -->
            <EditText
                android:id="@+id/editEmailView"
                android:layout_width="219dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alata"
                android:textSize="20dp"
                android:visibility="gone" />

            <!-- Class Label and Value -->
            <TextView
                android:id="@+id/class_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/alata"
                android:text="Class:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/curr_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alata"
                android:text="Edit Your Class"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- Class EditText (Initially Hidden) -->
            <EditText
                android:id="@+id/editClassView"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/alata"
                android:textSize="20sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/classroomId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/alata"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"/>

            <!-- Update Button -->
            <Button
                android:id="@+id/updatebtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/btn_blue"
                android:fontFamily="@font/alata"
                android:text="Update"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!--        &lt;!&ndash; Logout Text &ndash;&gt;-->
            <!--        <TextView-->
            <!--            android:id="@+id/logout"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginLeft="25dp"-->
            <!--            android:layout_marginTop="20dp"-->
            <!--            android:clickable="true"-->
            <!--            android:focusable="true"-->
            <!--            android:fontFamily="@font/alata"-->
            <!--            android:text="Logout?"-->
            <!--            android:textSize="20dp"-->
            <!--            android:textStyle="bold" />-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
