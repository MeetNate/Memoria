<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the corner radius for rounded corners -->
    <corners android:radius="25dp" /> <!-- Adjust the radius as needed -->

    <!-- Set the background color (transparent in this case) -->
    <solid android:color="#00FFFFFF" /> <!-- Fully transparent background -->

    <!-- Define the stroke (border) with a width and color -->
    <stroke
        android:width="2dp"
    android:color="#6E6B6B" /> <!-- Set the desired border color -->

</shape>
